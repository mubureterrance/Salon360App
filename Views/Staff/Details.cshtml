@model Salon360App.ViewModels.StaffViewModels.StaffDetailsViewModel
@{
    ViewData["Title"] = "Staff Details";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="row g-0">
            <!-- Profile Image -->
            <div class="col-md-4 bg-light d-flex align-items-center justify-content-center p-4">
                <img src="@Model.ProfileImageUrl" alt="Profile Image" class="img-fluid rounded-circle shadow" style="width: 220px; height: 220px; object-fit: cover;" />
            </div>

            <!-- Info -->
            <div class="col-md-8 p-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h3 class="mb-0">
                        <i class="bi bi-person-badge me-2"></i>@Model.FullName
                    </h3>
                    <span class="badge bg-@(Model.IsActive ? "success" : "danger")">
                        <i class="bi @(Model.IsActive ? "bi-check-circle" : "bi-x-circle") me-1"></i>
                        @(Model.IsActive ? "Active" : "Inactive")
                    </span>
                </div>

                <div class="mb-3 text-muted">
                    <i class="bi bi-briefcase-fill me-1"></i>@Model.RoleName
                </div>

                <dl class="row">
                    <dt class="col-sm-4"><i class="bi bi-envelope me-1"></i>Email</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4"><i class="bi bi-chat-left-text me-1"></i>Bio</dt>
                    <dd class="col-sm-8">@(!string.IsNullOrWhiteSpace(Model.Bio) ? Model.Bio : "<i>No bio provided</i>")</dd>

                    <dt class="col-sm-4"><i class="bi bi-calendar-check me-1"></i>Hire Date</dt>
                    <dd class="col-sm-8">@Model.HireDate.ToString("yyyy-MM-dd")</dd>

                    <dt class="col-sm-4"><i class="bi bi-gender-ambiguous me-1"></i>Gender</dt>
                    <dd class="col-sm-8">@Model.Gender</dd>

                    <dt class="col-sm-4"><i class="bi bi-calendar-heart me-1"></i>Date of Birth</dt>
                    <dd class="col-sm-8">@Model.DateOfBirth?.ToString("yyyy-MM-dd")</dd>

                    <dt class="col-sm-4"><i class="bi bi-geo-alt-fill me-1"></i>Address</dt>
                    <dd class="col-sm-8">@Model.Address</dd>
                </dl>

                <div class="d-flex mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-arrow-left"></i> Back to Staff List
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.StaffId" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Edit Staff
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
